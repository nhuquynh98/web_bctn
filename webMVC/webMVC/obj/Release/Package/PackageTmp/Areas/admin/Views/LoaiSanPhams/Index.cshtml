@model IEnumerable<webMVC.Models.LoaiSanPham>

@{
    ViewBag.Title = "Index";
    var soluong = 0;
}

<div class="page-title">
    <h3 class="breadcrumb-header">Thông tin loại sản phẩm</h3>
</div>

<div id="main-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-white">
                <div class="panel-heading clearfix">
                    <a class="btn btn-primary" style="margin-bottom: 10px" href="/admin/LoaiSanPhams/Create">Thêm mới loại sản phẩm</a>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Loại sản phẩm</th>
                                <th>mô tả</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@(++soluong)</th>
                                    <td>@Html.DisplayFor(modelItem => item.TenLSP)</td>
                                    <td>@Html.DisplayFor(modelItem => item.mota)</td>
                                    <td>
                                        <a class="btn btn-success" href="/admin/LoaiSanPhams/Edit/@item.MaLSP">Sửa</a>
                                        <a class="btn btn-info" href="/admin/LoaiSanPhams/Details/@item.MaLSP">Chi tiết</a>
                                        <a class="btn btn-danger" href="/admin/LoaiSanPhams/Delete/@item.MaLSP">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div><!-- Main Wrapper -->
