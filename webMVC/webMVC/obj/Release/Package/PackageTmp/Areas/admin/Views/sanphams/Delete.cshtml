@model webMVC.Models.sanpham

@{
    ViewBag.Title = "Delete";
}

<div id="main-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-white">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">Thông tin sản phẩm</h4>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Sản phẩm</label>
                        <div class="form-control">@Html.DisplayNameFor(model => model.tensp)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Giá</label>
                        <div class="form-control">@Html.DisplayFor(model => model.gia)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Đơn vị</label>
                        <div class="form-control">@Html.DisplayFor(model => model.donvi)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Mô tả</label>
                        <textarea class="input-large form-control" id="message" rows="3" placeholder="Enter a message ...">@Html.DisplayFor(model => model.mota)</textarea>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a class="btn btn-flickr" href="/admin/sanphams">quay lại</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
