@model IEnumerable<webMVC.Models.TaiKhoan>

@{
    ViewBag.Title = "Index";
    var soluong = 0;
}

<div class="page-title">
    <h3 class="breadcrumb-header">Thông tin khách hàng</h3>
</div>

<div id="main-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-white">
                <div class="panel-heading clearfix">
                    <a class="btn btn-primary" style="margin-bottom: 10px" href="/admin/TaiKhoans/Create">Thêm mới thông tin khách hàng</a>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Họ</th>
                                <th>Tên</th>
                                <th>Ngày sinh</th>
                                <th>Số điện thoại</th>
                                <th>Email</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@(++soluong)</th>
                                    <td>@Html.DisplayFor(modelItem => item.Ho)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Ten)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Ngaysinh)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Sdt)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>
                                        <a class="btn btn-success" href="/admin/TaiKhoans/Edit/@item.makh">Sửa</a>
                                        <a class="btn btn-info" href="/admin/TaiKhoans/Details/@item.makh">Chi tiết</a>
                                        <a class="btn btn-danger" href="/admin/TaiKhoans/Delete/@item.makh">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div><!-- Main Wrapper -->

