@model IEnumerable<webMVC.Models.manhinh>

@{
    ViewBag.Title = "Index";
    var soluong = 0;
}

<div class="page-title">
    <h3 class="breadcrumb-header">Thông tin màn hình</h3>
</div>

<div id="main-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-white">
                <div class="panel-heading clearfix">
                    <a class="btn btn-primary" style="margin-bottom: 10px" href="/admin/manhinhs/Create">Thêm mới thông tin màn hình</a>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tên sản phẩm</th>
                                <th>Công nghệ màn hình</th>
                                <th>Độ phân giải</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@(++soluong)</th>
                                    <td>@Html.DisplayFor(modelItem => item.tensp)</td>
                                    <td>@Html.DisplayFor(modelItem => item.congnghemanhinh)</td>
                                    <td>@Html.DisplayFor(modelItem => item.dophangiai)</td>
                                    <td>
                                        <a class="btn btn-success" href="/admin/manhinhs/Edit/@item.id">Sửa</a>
                                        <a class="btn btn-info" href="/admin/manhinhs/Details/@item.id">Chi tiết</a>
                                        <a class="btn btn-danger" href="/admin/manhinhs/Delete/@item.id">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div><!-- Main Wrapper -->

