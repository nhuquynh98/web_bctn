@model webMVC.Areas.admin.Models.DAOADMIN

@{
    ViewBag.Title = "Index";
    var soluong = 0;
    var db = Model as webMVC.Areas.admin.Models.DAOADMIN;
}

<div id="main-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-white">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">Thông tin tài khoản</h4>
                    <a class="btn btn-flickr" href="/admin/giohangs">quay lại</a>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Họ</label>
                        <div class="form-control">@db.taikhoan.Ho</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Tên</label>
                        <div class="form-control">@db.taikhoan.Ten</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Số điện thoại</label>
                        <div class="form-control">@db.taikhoan.Sdt</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Email</label>
                        <div class="form-control">@db.taikhoan.Email</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-white">
                <div class="panel-heading clearfix">
                    Thông tin giỏ hàng
                </div>
                <div class="panel-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tên sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Giá</th>
                                <th>Tổng giá</th>
                                <th>Đơn vị</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (db.listsanpham != null)
                            {
                                foreach (var item in db.listsanpham)
                                {
                                    <tr>
                                        <th scope="row">@(++soluong)</th>
                                        <td>@item.tensp</td>
                                        <td>@item.slsp</td>
                                        <td>@item.gia</td>
                                        <td>@(item.gia * item.slsp)</td>
                                        <td>@item.donvi</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>