@model webMVC.Models.manhinh

@{
    ViewBag.Title = "Details";
}


<div id="main-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-white">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">Thông tin chi tiết thông số màn hình</h4>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Tên sản phẩm</label>
                        <div class="form-control">@Html.DisplayFor(model => model.tensp)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Công nghệ màn hình</label>
                        <div class="form-control">@Html.DisplayFor(model => model.congnghemanhinh)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Độ phân giải</label>
                        <div class="form-control">@Html.DisplayFor(model => model.dophangiai)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Màn hình trong</label>
                        <div class="form-control">@Html.DisplayFor(model => model.manhinhrong)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Mặt kính cảm ứng</label>
                        <div class="form-control">@Html.DisplayFor(model => model.matkinhcamung)</div>
                    </div>
                    <a class="btn btn-success" href="/admin/manhinhs/Edit/@Model.id">Sửa</a>
                    <a class="btn btn-flickr" href="/admin/manhinhs">quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>