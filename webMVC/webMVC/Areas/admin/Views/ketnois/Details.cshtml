                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Mạng di động</label>
                        <div class="form-control">@Html.DisplayFor(model => model.mangdidong)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Sim</label>
                        <div class="form-control">@Html.DisplayFor(model => model.sim)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Wifi</label>
                        <div class="form-control">@Html.DisplayFor(model => model.wifi)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Kết nối khác</label>
                        <div class="form-control">@Html.DisplayFor(model => model.ketNoiKhac)</div>
                    </div>
                    <a class="btn btn-success" href="/admin/ketnois/Edit/@Model.id">Sửa</a>
