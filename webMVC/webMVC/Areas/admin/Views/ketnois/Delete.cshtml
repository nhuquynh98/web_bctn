@model webMVC.Models.ketnoi

@{
    ViewBag.Title = "Index";
}

<div id="main-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-white">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">Thông tin hỗ trợ kết nối</h4>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Tên sản phẩm</label>
                        <div class="form-control">@Html.DisplayFor(model => model.tensp)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Mạng di động</label>
                        <div class="form-control">@Html.DisplayFor(model => model.mangdidong)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Sim</label>
                        <div class="form-control">@Html.DisplayFor(model => model.sim)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Wifi</label>
                        <div class="form-control">@Html.DisplayFor(model => model.wifi)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Định vị</label>
                        <div class="form-control">@Html.DisplayFor(model => model.GPS)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Bluetooth</label>
                        <div class="form-control">@Html.DisplayFor(model => model.Bluetooth)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Bộ sạc</label>
                        <div class="form-control">@Html.DisplayFor(model => model.boSac)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">jack tai nghe</label>
                        <div class="form-control">@Html.DisplayFor(model => model.jackTaiNghe)</div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Kết nối khác</label>
                        <div class="form-control">@Html.DisplayFor(model => model.ketNoiKhac)</div>
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a class="btn btn-flickr" href="/admin/ketnois">quay lại</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>