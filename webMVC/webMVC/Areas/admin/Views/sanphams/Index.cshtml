@model IEnumerable<webMVC.Models.sanpham>

@{
    ViewBag.Title = "Index";
    var soluong = 0;
}

<div class="page-title">
    <h3 class="breadcrumb-header">Thông tin sản phẩm</h3>
</div>

<div id="main-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-white">
                <div class="panel-heading clearfix">
                    <a class="btn btn-primary" style="margin-bottom: 10px" href="/admin/sanphams/Create">Thêm mới sản phẩm</a>
                </div>
                <div class="panel-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tên sản phẩm</th>
                                <th>giá</th>
                                <th>đơn vị</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@(++soluong)</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tensp)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.gia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.donvi)
                                    </td>
                                    <td>
                                        <a class="btn btn-success" href="/admin/sanphams/Edit/@item.masp">Sửa</a>
                                        <a class="btn btn-info" href="/admin/sanphams/Details/@item.masp">Chi tiết</a>
                                        <a class="btn btn-danger" href="/admin/sanphams/Delete/@item.masp">Xóa</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div><!-- Main Wrapper -->